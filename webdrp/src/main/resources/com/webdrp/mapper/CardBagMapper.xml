<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webdrp.mapper.CardBagMapper">
    <insert id="insert" parameterType="com.webdrp.entity.CardBag"
            useGeneratedKeys="true" keyProperty="id">
        insert into cardbag(
            id,richUserId,`number`
        )
        values(
            #{id},#{richUserId},#{number}
        )
    </insert>
    <!--sql片段，时间格式化-->
    <sql id="select">
         id,richUserId,`number`,DATE_FORMAT(createTime,'%Y-%m-%d %H:%i:%s')as createTime,DATE_FORMAT(updateTime,'%Y-%m-%d %H:%i:%s')as updateTime
    </sql>

    <sql id="query">
        <if test="entity.id!=null">
            and id = #{entity.id}
        </if>
        <if test="entity.richUserId!=null">
            and richUserId = #{entity.richUserId}
        </if>
        <if test="entity.number!=null">
            and `number` = #{entity.number}
        </if>

    </sql>

    <delete id="delete" parameterType="com.webdrp.entity.CardBag">
        delete from cardbag where id = #{id}
    </delete>

    <update id="update" parameterType="com.webdrp.entity.CardBag">
        update cardbag
        <set>
            <if test="id!=null">
                id = #{id},
            </if>
            <if test="richUserId!=null">
                richUserId = #{richUserId},
            </if>
            <if test="number!=null">
                number = #{number},
            </if>

        </set>
        where id = #{id}
    </update>

    <select id="findAll" resultMap="resultList">
        select
        <include refid="select"></include>
        from cardbag where deleteTime is null
        <include refid="query"/>
    </select>

    <select id="count" resultType="long">
        select
        count(*)
        from cardbag where deleteTime is null
        <include refid="query"/>
    </select>

    <select id="loadAll" resultMap="resultList">
        select
        <include refid="select"></include>
        from cardbag where deleteTime is null
        <include refid="query"/>
        Limit #{pager.beginIndex} , #{pager.pageSize}
    </select>

    <select id="findById" resultMap="resultList">
        SELECT
        <include refid="select"></include>
        from cardbag where deleteTime is null  and id  = #{id}
    </select>

    <select id="findByRichUserId" resultMap="resultList">
        SELECT
        <include refid="select"></include>
        from cardbag where deleteTime is null and richUserId = #{richUserId}
    </select>

    <select id="findNumberByRichUserId" resultType="java.lang.Integer">
        select ifnull(`number`, 0)
        from cardbag
        where deleteTime is null and richUserId = #{richUserId}
    </select>

    <update id="updateNumber">
        update cardbag
            set
                `number` = #{number}
        where id = #{id}
    </update>


    <resultMap id="resultList" type="com.webdrp.entity.CardBag" >
        <id column="id" property="id" />
        <result  column="richUserId" property="richUserId"/>
        <result  column="number" property="number"/>
        <result  column="createTime" property="createTime"/>
        <result  column="updateTime" property="updateTime"/>

    </resultMap>
</mapper>
